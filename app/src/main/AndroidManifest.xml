<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theshaeffers.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MusicPlayer"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistActivity"
            android:label="@string/artists_name"
            android:theme="@style/ArtistTheme" />
        <activity
            android:name=".SongsActivity"
            android:label="@string/songs_name"
            android:theme="@style/SongsTheme" />
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/playlists_name"
            android:theme="@style/PlaylistsTheme" />
        <activity
            android:name=".PlayActivity"
            android:label="MusicPlayer"
            android:theme="@style/AppTheme" />
        <activity android:name=".SearchActivity"></activity>
    </application>

</manifest>